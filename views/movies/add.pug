extends ../layout

block content
  .form-container
    h2 Add New Movie
    
    form.form(method="POST", action="/movies/add")
      .form-group
        label(for="name") Movie Name *
        input#name.form-control(
          type="text",
          name="name",
          required,
          maxlength="200",
          placeholder="Enter movie name"
        )
      
      .form-group
        label(for="description") Description *
        textarea#description.form-control(
          name="description",
          required,
          minlength="10",
          maxlength="1000",
          rows="5",
          placeholder="Enter movie description"
        )
      
      .form-group
        label(for="year") Year *
        input#year.form-control(
          type="number",
          name="year",
          required,
          min="1888",
          max=new Date().getFullYear() + 5,
          placeholder="Enter release year"
        )
      
      .form-group
        label Genres * (Select at least one)
        .checkbox-group
          label.checkbox-label
            input(type="checkbox", name="genres", value="Action")
            |  Action
          label.checkbox-label
            input(type="checkbox", name="genres", value="Comedy")
            |  Comedy
          label.checkbox-label
            input(type="checkbox", name="genres", value="Drama")
            |  Drama
          label.checkbox-label
            input(type="checkbox", name="genres", value="Horror")
            |  Horror
          label.checkbox-label
            input(type="checkbox", name="genres", value="Sci-Fi")
            |  Sci-Fi
          label.checkbox-label
            input(type="checkbox", name="genres", value="Romance")
            |  Romance
          label.checkbox-label
            input(type="checkbox", name="genres", value="Thriller")
            |  Thriller
          label.checkbox-label
            input(type="checkbox", name="genres", value="Animation")
            |  Animation
          label.checkbox-label
            input(type="checkbox", name="genres", value="Documentary")
            |  Documentary
      
      .form-group
        label(for="rating") Rating * (0-10)
        input#rating.form-control(
          type="number",
          name="rating",
          required,
          min="0",
          max="10",
          step="0.1",
          placeholder="Enter rating"
        )

      .form-group
        label(for="image") Movie Image URL
        .image-input-group
          input#image.form-control(
            type="url",
            name="image",
            placeholder="https://example.com/movie-poster.jpg"
          )
          button#searchImage.btn.btn-outline-secondary(type="button", onclick="searchMovieImage()") üîç Search TMDB
        small.form-text.text-muted Optional: Enter a URL for the movie poster image or search TMDB for movie posters
        #imageResults.image-results

      .form-actions
        button.btn.btn-primary(type="submit") Add Movie
        a.btn.btn-secondary(href="/movies") Cancel
